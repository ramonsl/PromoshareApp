<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gusta.promoshareapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.InicioActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.CadastroEstabelecimentoActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.PrincipalActivity"
            android:label="Promoções"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.PerfilUsuarioActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.PerfilEstabelecimentoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.CadastroPromocoes"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.EstabelecimentoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.CadastroUsuarioActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.EditarPromocaoActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>